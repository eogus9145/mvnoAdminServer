<mapper namespace="telecentro.setup.soc_va_add_popup">
	
	<!-- 요금제관리 정보조회 -->
	<select id="soc_va_add_popup_info" parameterType="map" resultType="egovMap">
		<![CDATA[
		SELECT 	
			TELCO,
			PROD_CD,
			SERVICE_TYPE,
			SERVICE_NAME,
			GROUP_CD,
			BASIC_FEE,
			REMARK
		FROM ${db.mainschema}.CODE_SERVICE_INFO A
		WHERE TELCO = #{telco}
				AND PROD_CD = #{prodCd}
		]]>
	</select>
	
